<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="hibernate" description="Hibernate Plugin consists of sample code which is to guide how to use Hibernate and reference libraries which are needed to use these open sources.">
	<groupId>org.anyframe.plugin</groupId>
	<artifactId>anyframe-hibernate-pi</artifactId>
	<version>1.0.1</version>
	<dependent-plugins>
		<dependent-plugin name="core" version="2.0.0&gt;*" />
	</dependent-plugins>
	<resources>
		<resource dir="src/main/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/main/resources" filtered="true" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/test/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/test/resources" filtered="true" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/main/webapp/WEB-INF/jsp" filtered="false"
			packaged="false">
			<include name="**/*.jsp" />
		</resource>
	</resources>
	<build>
		<filesets>
			<fileset dir="src/main/java" filtered="true" packaged="true">
				<include name="**/org/anyframe/plugin/hibernate/**/*.java" />
			</fileset>
			<fileset dir="src/main/resources" filtered="true" packaged="false">
				<include name="**/hibernate/*.xml" />
				<include name="**/spring/context-hibernate.xml" />
				<exclude name="**/hibernate/hibernate.cfg.xml" />
			</fileset>
			<fileset dir="src/test/java" filtered="true" packaged="true">
				<include name="**/org/anyframe/plugin/hibernate/**/*.java" />
			</fileset>
			<fileset dir="src/test/resources" filtered="true" packaged="false">
				<include name="**/*anyframe-hibernate-pi*.xml" />
			</fileset>
			<fileset dir="src/main/webapp" filtered="false" packaged="false">
				<include name="**/hibernate/**/*.*" />
				<include name="**/anyframe.jsp" />
			</fileset>
			<fileset dir="db" filtered="false" packaged="false">
				<include name="**/*.xml" />
			</fileset>
		</filesets>
	</build>
	<samples>true</samples>
	<interceptor>
		<class>org.anyframe.plugin.interceptor.HibernatePluginInterceptor</class>
		<dependencies>
			<dependency>
				<groupId>org.anyframe</groupId>
				<artifactId>anyframe-ide-command-common</artifactId>
				<version>2.0.2</version>
				<scope>interceptor</scope>
			</dependency>
			<dependency>
				<groupId>commons-logging</groupId>
				<artifactId>commons-logging</artifactId>
				<version>1.1.1</version>
			</dependency>			
		</dependencies>
	</interceptor>
	<essential>false</essential>
	<checked>false</checked>
</plugin>